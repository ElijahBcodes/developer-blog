<h2>Edit Blog Post</h2>

<%= form_with model: @blog_post, url: blog_post_path(@blog), method: :patch, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br />
  <%= form.label :content %>
  <%= form.text_field :content %>
  <br /> 
  <%= form.submit %>
  <% end %>
  <br />

  <p>Back to <%= link_to 'Blog Content', blog_post_path %></p>